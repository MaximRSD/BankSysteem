<Window x:Class="BankSystem.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BankSystem"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Canvas x:Name="canvas" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="667" Margin="125,0,0,0"/>
        <StackPanel x:Name="panel" HorizontalAlignment="Left" Height="419" VerticalAlignment="Top" Width="125" Grid.RowSpan="2" Background="Black" OpacityMask="White">
            <Button x:Name="btnMain" Content="Overzicht" Height="45" Background="Black" BorderBrush="White" Foreground="White" FontFamily="Brush Script MT" FontSize="20" Click="btnMain_Click"/>
            <Button x:Name="btnRekeningen" Height="45" Background="Black" BorderBrush="White" Foreground="White" FontFamily="Brush Script MT" FontSize="20" Content="Rekeningen" Click="btnRekeningen_Click"/>
            <Button x:Name="btnKlanten" Height="45" Background="Black" BorderBrush="White" Foreground="White" FontFamily="Brush Script MT" FontSize="20" Content="Klanten" Click="btnKlanten_Click"/>
        </StackPanel>

    </Grid>
</Window>
